<div class="container">
  <%= render "shared/error_messages", resource: @book %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <div class="">
        <%= form_for(@book) do |f| %>
          <div class="">
            <%= f.label 'Title' %><br>
            <%= f.text_field :title, class: "col-xs-12" %><br>
          </div>
          <div class="">
            <%= f.label 'Opinion' %><br>
            <%= f.text_field :body, class: "col-xs-12" %><br>
          </div>
          <div class="">
            <%= f.submit "Update Book", class: "btn btn-primary col-xs-12"%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-mid-3">

    </div>
  </div>
</div>
<%= link_to 'Show', book_path(@book) %> |
<%= link_to 'Back', books_path %>
