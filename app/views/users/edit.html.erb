<div class="container">
  <h2>User info</h2>
  <%= form_for @user,:url => {controller: "users", action: "update"}, method: :patch do |f| %>
    <%= render "shared/error_messages", resource: @user %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <div class="field">
      <%= f.label :introduction %>
      <%= f.text_area :introduction %>
    </div>
    <%= f.submit "Update User" %>
  <% end %>
</div>
