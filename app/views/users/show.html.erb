<div class="container">
  <% if flash[:notice] %>
    <div class="">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-3">
      <%= render "shared/user_info" %>
      <%= render "shared/new_book_form", book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
