<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class='nav navbar-nav navbar-left' >
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="glyphicon glyphicon-home">
                <%= link_to "Home", user_path(current_user) %>
              </li>
              <li class="glyphicon glyphicon-user users">
                <%= link_to 'Users', users_path %>
              </li>
              <li class="glyphicon glyphicon-book books">
                <%= link_to 'Books', books_path %>
              </li>
              <li class="glyphicon glyphicon-log-out logout">
                <%= link_to 'logout', destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li class="glyphicon glyphicon-home">
                <%= link_to "Home", root_path %>
              </li>
              <li class="glyphicon glyphicon-link">
                <%= link_to "About", home_about_path	 %>
              </li>
              <li class="glyphicon glyphicon-edit">
                <%= link_to "Sign Up", new_user_registration_path %>
              </li>
              <li class="glyphicon glyphicon-log-in">
                <%= link_to "login", new_user_session_path %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
  </header>


  <div class="body">
    <%= yield %>
  </div>


    <footer>
      <div class='container'>
      	<div class='row'>
      	<div class='col-xs-3 col-xs-offset-9'>
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
      </div>
    </footer>
  </body>
</html>
